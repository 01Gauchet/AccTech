
library(shiny)

# Define UI for application that draws a histogram
shinyUI(fluidPage(

    # Application title
    titlePanel("ACC Technology: First Package"),

    # Sidebar with a slider input for number of bins
    sidebarLayout(
        sidebarPanel(
          sliderInput("bins", "Number of Bins: ",
                      min = 1,
                      max = 20,
                      value = 5),
          
          sliderInput("clstrs",
                        "Number of clusters:",
                        min = 1,
                        max = 10,
                        value = 2)
        ),

        # Show a plot of the generated distribution
        mainPanel(
            
            plotOutput("clustPlot"),
            plotOutput("corPlot")
            
        )
    )
))
